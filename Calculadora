#include <stdio.h>

int soma(int a, int b){
    int s;
    s = a+b;
    scanf("Digite o primeiro resultado: %d", &a);
    scanf("Digite o segundo resultado: %d", &b);
    printf("Resultado: %d + %d = %d", a, b, s);
}

int subtracao(int a, int b){
    int sub;
    sub = a-b;
    scanf("Digite o primeiro resultado: %d", &a);
    scanf("Digite o segundo resultado: %d", &b);
    printf("Resultado: %d - %d = %d", a, b, sub);
}

int multiplicacao(int a, int b){
    int m;
    m = a*b;
    scanf("Digite o primeiro resultado: %d", &a);
    scanf("Digite o segundo resultado: %d", &b);
    printf("Resultado: %d * %d = %d", a, b, m);
}

int divisao(int a, int b){
    int d;
    d = a/b;
    scanf("Digite o primeiro resultado: %d", &a);
    scanf("Digite o segundo resultado: %d", &b);
    printf("Resultado: %d / %d = %d", a, b, d);
}

int menu(){
    printf("===============================\n\tCalculadora Simples\n===============================\n");
    printf("Selecione uma operacao:");
    printf("1. Adicao\n2. Subtracao\n3. Multiplicacao\n4. Divisao\n5. Sair\nOpcao: ");
}